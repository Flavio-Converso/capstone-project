@using capstone_project.Models.DTOs.Cart
@model CartDTO

@{
    ViewBag.Title = "Your Cart";
}

<h2>Your Cart</h2>

@if (Model.CartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantità disp.</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr id="cart-item-row-@item.GameId">
                    <td>
                        @if (item.CoverImage != null)
                        {
                            var base64Image = Convert.ToBase64String(item.CoverImage);
                            var imgSrc = $"data:image/png;base64,{base64Image}"; // Assuming the image is a PNG
                            <img src="@imgSrc" alt="@item.GameName Cover" style="width:100px;height:auto;" />
                        }
                        else
                        {
                            <span>No cover image</span>
                        }
                    </td>
                    <td>@item.GameName</td>
                    <td>@item.Price</td>
                    <td>@item.QuantityAvail</td>
                    <td>
                        <div style="display:inline;">
                            <button type="button" class="btn btn-secondary btn-sm btn-decrement" data-gameid="@item.GameId">-</button>
                            <input type="number" id="quantity-@item.GameId" value="@item.Quantity" min="1" class="form-control" style="width: 80px; text-align: center; display: inline;" data-max-quantity="@item.QuantityAvail" readonly />
                            <button type="button" class="btn btn-secondary btn-sm btn-increment" data-gameid="@item.GameId">+</button>
                        </div>
                    </td>

                    <td id="total-@item.GameId">@(item.Quantity * item.Price)</td>
                    <td>
                        <form id="remove-from-cart-form-@item.GameId" class="remove-from-cart-form" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="gameId" value="@item.GameId" />
                            <input type="hidden" name="source" value="Cart" />
                            <button type="button" class="btn btn-danger btn-sm remove-from-cart-btn" data-gameid="@item.GameId">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <h3>Total: <span id="total-price">@Model.TotalPrice</span></h3>

    <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}
