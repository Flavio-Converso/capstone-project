@model capstone_project.Models.DTOs.PegiDTO

@{
    ViewData["Title"] = "Aggiungi Pegi";
}
<div class="container myGreyBg2 rounded w-25 mb-4">


    <h1 class="text-white text-center pt-4">Aggiungi un <span class="text-orange">PEGI</span></h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-valid"></div>

        <div class="form-group d-flex flex-column align-items-center">
            <label asp-for="Name" class="control-label text-white mb-1 fs-4">Nome del <span class="text-orange">PEGI</span></label>
            <input asp-for="Name" class="w-75" autocomplete="off" />
            <span asp-validation-for="Name" class="text-valid mt-1"></span>
        </div>

        <div class="form-group d-flex flex-column align-items-center mt-3 mb-1">
            <label asp-for="Description" class="control-label text-white fs-4">Descrizione del <span class="text-orange">PEGI</span></label>
            <textarea asp-for="Description" class="w-75" > </textarea>
            <span asp-validation-for="Description" class="text-valid mt-1"></span>
        </div>
        <div class="form-group mt-4 text-center">
            <input asp-for="Img" class="file w-75" type="file" accept=".jpg,.jpeg,.png" />
            <span asp-validation-for="Img" class="text-valid mt-1"></span>
        </div>

        <div class="form-group mt-4 text-center">
            <button type="submit" class="auth-btn mb-4">Aggiungi</button>
        </div>
    </form>
</div>
<div class="d-flex justify-content-center">
    <a class="discard-btn text-center" asp-action="List">Torna alla Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
