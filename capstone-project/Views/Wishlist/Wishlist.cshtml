@using capstone_project.Models.DTOs.Wishlist
@model IEnumerable<WishlistItemDTO>

@{
    ViewBag.Title = "Your Wishlist";
}

<h2>Your Wishlist</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="wishlist-item-row-@item.GameId">
                    <td>
                        @if (item.CoverImage != null)
                        {
                            var base64Image = Convert.ToBase64String(item.CoverImage);
                            var imgSrc = $"data:image/png;base64,{base64Image}"; // Assuming the image is a PNG
                            <img src="@imgSrc" alt="@item.GameName Cover" style="width:100px;height:auto;" />
                        }
                        else
                        {
                            <span>No cover image</span>
                        }
                    </td>
                    <td>@item.GameName</td>
                    <td>
                        <a asp-controller="Game" asp-action="Details" asp-route-id="@item.GameId" class="btn btn-info">View Details</a>

                        <!-- Remove from Wishlist Form -->
                        <form id="remove-from-wishlist-form-@item.GameId" class="me-3 remove-from-wishlist-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="gameId" value="@item.GameId" />
                            <input type="hidden" name="source" value="Wishlist" />
                            <button type="button" class="auth-btn fs-4 remove-from-wishlist-btn" data-gameid="@item.GameId">
                                <i class="bi bi-suit-heart-fill"></i> Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your wishlist is empty.</p>
}

<a asp-controller="Game" asp-action="List" class="btn btn-secondary">Back to Games List</a>

@section Scripts {
        <script src="~/js/wishlist.js" asp-append-version="true"></script>
}
