@model IEnumerable<capstone_project.Models.Game>

@{
    ViewBag.Title = "Lista Giochi";
}

<h2>Lista Giochi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Copertina</th> <!-- New column for the cover image -->
            <th>Nome</th>
            <th>Piattaforma</th>
            <th>Prezzo</th>
            <th>Data di Rilascio</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>
                    @if (game.GameImages != null && game.GameImages.Any())
                    {
                        // Using integer comparison for ImgType
                        var coverImage = game.GameImages.FirstOrDefault(img => img.ImgType == (ImageType)0);
                        if (coverImage != null)
                        {
                            var base64Image = Convert.ToBase64String(coverImage.Img);
                            var imgSrc = $"data:image/png;base64,{base64Image}"; // Assuming the image is a PNG
                            <img src="@imgSrc" alt="@game.Name Cover" style="width:100px;height:auto;" />
                        }
                        else
                        {
                            <span>No cover image</span>
                        }
                    }
                    else
                    {
                        <span>No cover image</span>
                    }
                </td>
                <td>@game.Name</td>
                <td>@game.Platform</td>
                <td>@game.Price.ToString("C")</td>
                <td>@game.ReleaseDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@game.GameId" class="btn btn-info">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@game.GameId" class="btn btn-primary">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@game.GameId" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Aggiungi Nuovo Gioco</a>
