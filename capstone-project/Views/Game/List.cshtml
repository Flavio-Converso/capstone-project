@model IEnumerable<capstone_project.Models.Game>

@{
    ViewBag.Title = "Lista Giochi";
    var wishlistGameIds = ViewBag.WishlistGameIds as List<int> ?? new List<int>();
    var cartGameIds = ViewBag.CartGameIds as List<int> ?? new List<int>(); // List of games in the cart
}

<h2>Lista Giochi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Copertina</th>
            <th>Nome</th>
            <th>Piattaforma</th>
            <th>Prezzo</th>
            <th>Data di Rilascio</th>
            <th>Quantità disp.</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
                <tr>
                    <td>
                    @if (game.GameImages != null && game.GameImages.Any())
                    {
                        var coverImage = game.GameImages.FirstOrDefault(img => img.ImgType == (ImageType)0);
                        if (coverImage != null)
                        {
                            var base64Image = Convert.ToBase64String(coverImage.Img);
                            var imgSrc = $"data:image/png;base64,{base64Image}";
                                        <img src="@imgSrc" alt="@game.Name Cover" style="width:100px;height:auto;" />
                        }
                        else
                        {
                                        <span>No cover image</span>
                        }
                    }
                    else
                    {
                                <span>No cover image</span>
                    }
                    </td>
                    <td>@game.Name</td>
                    <td>@game.Platform</td>
                    <td>@game.Price.ToString("C")</td>
                    <td>@game.ReleaseDate.ToShortDateString()</td>
                    <td>
                    @if (game.QuantityAvail > 0)
                    {
                        @game.QuantityAvail
                    }
                    else
                    {
                                <span class="text-danger">Esaurito</span>
                    }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@game.GameId" class="btn btn-info">Dettagli</a>
                        <a asp-action="Edit" asp-route-id="@game.GameId" class="btn btn-primary">Modifica</a>
                        <a asp-action="Delete" asp-route-id="@game.GameId" class="btn btn-danger">Elimina</a>
                    @if (wishlistGameIds.Contains(game.GameId))
                    {
                                <form asp-action="RemoveFromWishlist" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                                    <input type="hidden" name="gameId" value="@game.GameId" />
                                    <input type="hidden" name="source" value="List" />
                                    <button type="submit" class="btn btn-danger">Rimuovi dalla Wishlist</button>
                                </form>
                    }
                    else
                    {
                                <form asp-action="AddToWishlist" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                                    <input type="hidden" name="gameId" value="@game.GameId" />
                                    <input type="hidden" name="source" value="List" />
                                    <button type="submit" class="btn btn-warning">Aggiungi alla Wishlist</button>
                                </form>
                    }

                    @if (cartGameIds.Contains(game.GameId))
                    {
                                <button class="btn btn-secondary" disabled>Nel Carrello</button>
                    }
                    else
                    {
                                <form asp-action="AddToCart" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                                    <input type="hidden" name="gameId" value="@game.GameId" />
                                    <input type="hidden" name="source" value="List" />
                                    <button type="submit" class="btn btn-success" @(game.QuantityAvail == 0 ? "disabled" : "")>Aggiungi al Carrello</button>
                                </form>
                    }
                    </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Aggiungi Nuovo Gioco</a>
