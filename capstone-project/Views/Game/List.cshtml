@model IEnumerable<capstone_project.Models.Game>

@{
    ViewBag.Title = "Lista Giochi";
}

<h2>Lista Giochi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Piattaforma</th>
            <th>Prezzo</th>
            <th>Data di Rilascio</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Name</td>
                <td>@game.Platform</td>
                <td>@game.Price.ToString("C")</td>
                <td>@game.ReleaseDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@game.GameId" class="btn btn-info">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@game.GameId" class="btn btn-primary">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@game.GameId" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Aggiungi Nuovo Gioco</a>
